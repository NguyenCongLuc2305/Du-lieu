@model QLDA.Models.teacher

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    fieldset {
        background-color: #eeeeee;
        border: 1px solid;
    }

    legend {
        background-color: gray;
        color: white;
        padding: 5px 10px;
    }

    input {
        min-width: 200px;
    }

    select {
        min-width: 200px;
    }

    fieldset {
        display: block;
        margin-left: 70px;
        margin-right: 2px;
        padding-top: 0.35em;
        padding-bottom: 0.625em;
        padding-left: 2em;
        padding-right: 0.75em;
        border: 2px groove (internal value);
        max-width: 700px;
    }

    table, th, td {
        border: 50px;
    }

    label {
        position: relative;
        margin: 0;
        line-height: 20px;
    }


    img {
        max-width: 150px;
    }

    input[type=file] {
        padding: 10px;
        background: #2d2d2d;
    }
</style>
<form action="/Teacher/Create" method="post" enctype="multipart/form-data">


    <fieldset>

        <legend>Thêm mới giáo viên:</legend>
        <table style="border-inline:1px;">
            <tr>
                <td>
                    <label>Mã giáo viên:</label>
                    <br>
                    <input type="text" id="teacher_id" name="teacher_id" required/>
                    <br>
                </td>
                <td>
                    <label>Tên:</label>
                    <br>
                    <input type="text" id="name" name="name" required/>
                    <br>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Ngày sinh:</label>
                    <br>
                    <input type="date" id="age" name="age" required/>
                </td>
                <td>
                    <label>Địa chỉ:</label><br>
                    <input type="text" id="address" name="address" required/>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Trình độ</label><br />
                    <input type="text" id="education" name="education" required/>
                </td>
                <td>
                    <br>
                    <label>Giới tính:</label>
                    <br>
                    <label class="light">Nam:</label>
                    <input type="radio" id="gender" value="Nam" name="gender" required/><br />
                    <label class="light">Nữ:</label>
                    <input type="radio" id="gender" value="Nữ" name="gender" required/>

                </td>


            </tr>
            <tr>
                <td>
                    <label>Bộ môn</label><br />
                    <select name="subject" id="subject" onchange="getFaculty();">
                        <option required value="">Chọn Bộ môn</option>
                        <option value="CNPM" >Công nghệ phần mềm</option>
                        <option value="MVATTT" >Mạng và an toàn TT</option>
                    </select>
                </td>
                <td>
                    <label>Khoa:</label>
                    <br>
                    <select name="faculty" id="faculty" onchange="getFaculty();">
                        <option value="">Chọn Khoa</option>
                        <option value="CNTT">Công nghệ thông tin</option>
                        <option value="TDH">Tự động hóa</option>
                        <option value="TTDPT">TT đa phương tiện</option>
                        <option value="QTVL">Quản trị văn phòng</option>
                    </select>
                    <br>
                </td>
                
            </tr>
            <tr>
                <td>
                    <label>Ảnh:</label>
                    <br>
                    <input type='file' onchange="readURL(this);" name="ImageFile" id="ImageFile" />
                    <img id="blah" style="width:150px;height:150px" alt="your image" />
                    <br>
                </td>
                <td>
                    <label>Số điện thoại</label>
                    <input type="text" id="phone" name="phone" />
                </td>

            </tr>
        </table>
    </fieldset>

    <button type="submit" class="btn btn-primary" style="margin:15px 0px 0px 400px">Thêm</button>
</form>
