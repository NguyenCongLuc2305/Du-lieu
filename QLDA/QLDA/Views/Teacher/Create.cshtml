@model QLDA.Models.teacher

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    legend {
        background-color: gray;
        color: white;
        padding: 5px 5px 5px 30px;
    }

    input {
        min-width: 300px;
    }

    select {
        min-width: 300px;
    }

    fieldset {
        display: block;
        padding-top: 0.35em;
        padding-bottom: 2em;
        padding-left: 2em;
        padding-right: 2em;
        border: 2px groove;
        max-width: 900px;
        height: 500px;
        left: 90px;
        position: relative;
        background-color: #eeeeee;
        border: 1px solid;
    }

    label {
        position: relative;
        margin: 0;
        line-height: 20px;
        padding-top: 15px;
    }

    img {
        max-width: 150px;
    }

    input[type=file] {
        padding: 10px;
        background: #2d2d2d;
    }

    .left-part {
        position: absolute;
        top: 0px;
        right: -70px;
    }
</style>
<form action="/Teacher/Create" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Thêm mới giáo viên:</legend>
        <div class="col-lg-12" style=" position: relative;">
            <div class="col-lg-6">
                <div>
                    <label>Mã giáo viên:</label>
                    <br>
                    <input type="text" id="teacher_id" name="teacher_id" required />
                    <br>
                </div>
                <div>
                    <label>Tên:</label>
                    <br>
                    <input type="text" id="name" name="name" required />
                    <br>
                </div>


                <div>
                    <label>Ngày sinh:</label>
                    <br>
                    <input type="date" id="age" name="age" required />
                </div>
                <div>
                    <label>Địa chỉ:</label><br>
                    <input type="text" id="address" name="address" required />
                </div>
                <div>
                    <br>
                    <label>Giới tính:</label>
                    <br>
                    <label class="light">Nam:</label>
                    <input type="radio" id="gender" value="Nam" name="gender" required /><br />
                    <label class="light">Nữ: &ensp; </label>
                    <input type="radio" id="gender" value="Nữ" name="gender" required />

                </div>
                
            </div>
            <div class="col-lg-6 left-part">

                <div>
                    <label>Trình độ</label><br />
                    <input type="text" id="education" name="education" required />
                </div>

                <div>

                    <div>
                        <label>Bộ môn</label><br />
                        <select name="subject" id="subject" onchange="getFaculty();">
                            <option required value="">Chọn Bộ môn</option>
                            <option value="CNPM">Công nghệ phần mềm</option>
                            <option value="MVATTT">Mạng và an toàn TT</option>
                        </select>
                    </div>
                    <div>
                        <label>Khoa:</label>
                        <br>
                        <select name="faculty" id="faculty" onchange="getFaculty();">
                            <option value="">Chọn Khoa</option>
                            <option value="CNTT">Công nghệ thông tin</option>
                            <option value="TDH">Tự động hóa</option>
                            <option value="TTDPT">TT đa phương tiện</option>
                            <option value="QTVL">Quản trị văn phòng</option>
                        </select>
                        <br>
                    </div>



                    <div>
                        <label>Số điện thoại</label>
                        <br />
                        <input type="text" id="phone" name="phone" />
                    </div>
                    <div>
                        <label>Ảnh:</label>
                        <br>
                        <input type='file' onchange="readURL(this);" name="ImageFile" id="ImageFile" />
                        <img id="blah" style="width:150px;height:150px" alt="your image" />
                        <br>
                    </div>
                </div>

            </div>

        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary" style="margin:15px 0px 0px 500px;">Thêm</button>
</form>
