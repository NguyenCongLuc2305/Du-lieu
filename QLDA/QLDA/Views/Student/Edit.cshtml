@model QLDA.Models.student
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    legend {
        background-color: gray;
        color: white;
        padding: 5px 5px 5px 30px;
    }

    input {
        min-width: 300px;
    }

    select {
        min-width: 200px;
    }

    fieldset {
        display: block;
        padding-top: 0.35em;
        padding-bottom: 2em;
        padding-left: 2em;
        padding-right: 2em;
        border: 2px groove;
        max-width: 900px;
        height: 500px;
        left: 90px;
        position: relative;
        background-color: #eeeeee;
        border: 1px solid;
    }

    label {
        position: relative;
        margin: 0;
        line-height: 20px;
        padding-top: 15px;
    }

    img {
        max-width: 150px;
    }

    input[type=file] {
        padding: 10px;
        background: #2d2d2d;
    }

    .left-part {
        position: absolute;
        top: 0px;
        right: -70px;
    }
</style>
<form action="/Student/Edit" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Sửa thông tin sinh viên:</legend>
        <div class="col-lg-12" style=" position: relative;">

            <div class="col-lg-6">

                <div>

                    <label>Mã sinh viên:</label>
                    <br>
                    <input type="text" value="@Model.student_id" required id="student_id" name="student_id">
                    <br>

                </div>
                <div>
                    <label>Tên:</label>
                    <br>
                    <input type="text" value="@Model.name" required id="name" name="name">
                    <br>
                </div>


                <div>
                    <label>Ngày sinh:</label>
                    <br>
                    <input type="date" value="@Model.age.ToString("yyyy-MM-dd")" required id="age" name="age">
                </div>
                <div>
                    <label>Địa chỉ:</label><br>

                    <input type="text" id="address" value="@Model.address" required name="address">

                </div>
                <div>
                    <br>
                    <label>Giới tính:</label>
                    <br />
                    @{
                        if (Model.gender == "Nam")
                        {
                         <label class="light">Nam:</label>
                            <input type="radio" id="gender" checked value="Nam" name="gender"><br />
                            <label class="light">Nữ:&ensp;&nbsp;</label>
                            <input type="radio" id="gender" value="Nữ" name="gender">
                        }
                        else if (Model.gender == "Nữ")
                        {
                            <label class="light">Nam:</label>
                            <input type="radio" id="gender" value="Nam" name="gender"><br />
                            <label class="light">Nữ: &ensp;&nbsp;</label>
                            <input type="radio" id="gender" checked value="Nữ" name="gender">
                        }

                    }

                </div>
            </div>
            <div class="col-lg-6 left-part">
                <div>
                    <label>Email:</label><br />
                    <input type="text" id="email" value="@Model.email" required name="email" />
                </div>

                <div>
                    <label>Khoa:</label>
                    <br>
                    @{
                        if (@Model.faculty == "CNTT")
                        {
                            <select name="faculty" id="faculty" onchange="getFaculty();">
                                <option required value="">Chọn khoa</option>
                                <option value="CNTT" selected>Công nghệ thông tin</option>
                                <option value="TDH">Tự động hóa</option>
                                <option value="TTDPT">TT đa phương tiện</option>
                                <option value="QTVP">Quản trị văn phòng</option>
                            </select>
                        }
                        if (@Model.faculty == "TDH")
                        {
                            <select name="faculty" id="faculty" onchange="getFaculty();">
                                <option required value="">Chọn khoa</option>
                                <option value="TDH" selected>Tự động hóa</option>
                                <option value="CNTT">Công nghệ thông tin</option>
                                <option value="TTDPT">TT đa phương tiện</option>
                                <option value="QTVP">Quản trị văn phòng</option>
                            </select>
                        }
                        if (@Model.faculty == "TTDPT")
                        {
                            <select name="faculty" id="faculty" onchange="getFaculty();">
                                <option required value="">Chọn khoa</option>
                                <option value="TTDPT" selected>TT đa phương tiện</option>
                                <option value="TDH">Tự động hóa</option>
                                <option value="CNTT">Công nghệ thông tin</option>
                                <option value="QTVP">Quản trị văn phòng</option>
                            </select>
                        }
                        if (@Model.faculty == "QTVP")
                        {
                            <select name="faculty" id="faculty" onchange="getFaculty();">
                                <option required value="">Chọn khoa</option>
                                <option value="QTVP" selected>Quản trị văn phòng</option>
                                <option value="TDH">Tự động hóa</option>
                                <option value="CNTT">Công nghệ thông tin</option>
                                <option value="TTDPT">TT đa phương tiện</option>
                            </select>
                        }
                    }
                    <br />

                    <label>Lớp:</label>
                    <br/>
                    <select name="_class" id="_class">
                        <option value="@Model._class">@Model._class</option>
                    </select>
                    <br>

                </div>

                <div>
                    <label>Số điện thoại:</label>
                    <br>
                    <input type="text" value="@Model.phone" id="phone" name="phone">
                    <br>

                </div>
                <div>
                    <label>Ảnh:</label>
                    <br>
                    <img id="blah" src="@Url.Content(Model.image)" style="width:150px;height:150px"  />

                    <br>
                </div>
            </div>
        </div>

    </fieldset>

    <button type="submit" class="btn btn-primary" style="margin:15px 0px 0px 400px">Sửa</button>
</form>